{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": ["**/node_modules/**", "**/dist/**", "**/coverage/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noUnusedImports": "warn"
			}
		}
	},
	"formatter": {
		"lineEnding": "lf",
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
